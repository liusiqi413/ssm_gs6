<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dao.HireMapper">
<select id="findHireList" resultType="com.entity.Hire">
    select * from hire_emp
    <where>
        <if test="companyName!=null and companyName!=''">
            and companyName like concat('%',#{companyName},'%')
        </if>
    </where>
</select>
<insert id="addHire">
INSERT INTO hire_emp(companyName,hireType,request,numbers,salary,place,photo,descs,tel,times) VALUES (#{companyName},#{hireType},#{request},#{numbers},#{salary},#{place},#{photo},#{descs},#{tel},#{times})
</insert>
</mapper>